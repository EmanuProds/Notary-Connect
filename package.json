{
    "name": "notary-connect",
    "version": "1.0.0",
    "description": "Sistema de atendimento para CartÃ³rios via Web e WhatsApp com Electron",
    "author": "Emanuel da Costa Pereira",
    "license": "Proprietary",
    "main": "electronMain.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "dev": "electron . --inspect",
        "gtk": "cross-env GTK_PATH=/usr/lib/x86_64-linux-gnu/gtk-3.0 ELECTRON_DISABLE_GPU=1 ELECTRON_NO_SANDBOX=1 PORT=3000 ELECTRON_PORT=3000 electron . --no-sandbox"
    },
    "build": {
        "appId": "com.notaryconnect.desktop",
        "productName": "Notary Connect",
        "files": [
            "electronMain.js",
            "preload.js",
            "backend/**/*",
            "frontend/web/**/*",
            "database/notaryconnect.sqlite",
            "node_modules/sqlite3/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "win": {
            "target": "nsis",
            "icon": "frontend/web/img/icons/logo.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "perMachine": false,
            "createDesktopShortcut": true
        },
        "asar": true,
        "asarUnpack": [
            "node_modules/sqlite3/build/Release/node_sqlite3.node"
        ],
        "publish": {
            "provider": "github",
            "owner": "EmanuProds",
            "repo": "Notary Connect"
        }
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "whatsapp",
        "chatbot",
        "notary",
        "cartorio",
        "atendimento",
        "electron",
        "sqlite"
    ],
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "express": "^5.1.0",
        "multer": "^2.0.0",
        "puppeteer": "^24.8.2",
        "qrcode": "^1.5.4",
        "sqlite3": "^5.1.7",
        "uuid": "^11.1.0",
        "whatsapp-web.js": "^1.28.0",
        "ws": "^8.18.2"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "electron": "^34.5.6",
        "electron-builder": "^26.0.12"
    }
}
